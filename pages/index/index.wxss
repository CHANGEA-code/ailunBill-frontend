swiper{
  width: 100%;
  height: 600rpx;
}
image{
  width: 100%;
  height: 600rpx;
}
.down{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.down-item{
  padding: 20rpx;
}
.month-box{
  height: 235rpx;
  padding: 20rpx 20rpx;
  margin-bottom: 10rpx;
  background-color: #07c160;
  /* border-radius: 10rpx; */
  color: aliceblue;
  /* text-align: center; */
}
.month-box .font{
  font-size: 45rpx;
  /* color: rgb(161, 87, 1); */
}
.month-bottom{
  display:flex;
  flex-direction: row;
}
.month-bottom .month-item{
  padding: 5rpx 0;
}
